{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "esModuleInterop": true,
        // "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "app.ts",
        "src/**/*.ts"
    ]
}